    <div class="container">
        <h1>
            <img src="data:image/png;base64,..." alt="Smemorella" style="max-width: 300px; height: auto; margin-bottom: 10px;">
        </h1>
        <p class="subtitle">Un'app per smemoinnamorati üíï</p>

        <div id="setupInstructions" class="setup-instructions">
            <h3>‚öôÔ∏è Configurazione Supabase (3 minuti!)</h3>
            <ol>
                <li>Vai su <a href="https://supabase.com" target="_blank">supabase.com</a> e crea un account gratuito</li>
                <li>Crea un nuovo progetto (scegli un nome e una password)</li>
                <li>Vai su "Project Settings" ‚Üí "API"</li>
                <li>Copia <code>Project URL</code> e <code>anon public key</code></li>
                <li>Incollali nello script qui sotto (cerca <code>SUPABASE_URL</code>)</li>
                <li>Vai su "SQL Editor" e esegui questo comando:
                    <pre style="background: #f5f5f5; padding: 10px; border-radius: 5px; margin-top: 10px; overflow-x: auto;">
CREATE TABLE tasks (
  id UUID DEFAULT gen_random_uuid() PRIMARY KEY,
  text TEXT NOT NULL,
  completed BOOLEAN DEFAULT false,
  created_by TEXT NOT NULL,
  created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);

ALTER TABLE tasks ENABLE ROW LEVEL SECURITY;

CREATE POLICY "Allow all operations" ON tasks
  FOR ALL USING (true) WITH CHECK (true);
                    </pre>
                </li>
            </ol>
            <p style="margin-top: 15px; color: #A68D66; font-weight: bold;">‚ú® Fatto! L'app si sincronizzer√† automaticamente!</p>
        </div>

        <div class="sync-status" id="syncStatus">‚úÖ Connesso</div>

        <div class="name-setup" id="nameSetup">
            <input type="text" id="nameInput" placeholder="Inserisci il tuo nome..." />
            <button onclick="setUserName()">Conferma</button>
        </div>

        <div id="mainApp" style="display: none;">
            <div class="current-user" id="currentUser"></div>

            <div class="add-task">
                <input type="text" id="taskInput" placeholder="Cosa dobbiamo fare...?" />
                <button onclick="addTask()">Aggiungi</button>
            </div>

            <ul class="tasks" id="taskList"></ul>

            <div class="stats">
                <div class="stat">
                    <div class="stat-number" id="totalTasks">0</div>
                    <div class="stat-label">Totali</div>
                </div>
                <div class="stat">
                    <div class="stat-number" id="completedTasks">0</div>
                    <div class="stat-label">Completate</div>
                </div>
                <div class="stat">
                    <div class="stat-number" id="pendingTasks">0</div>
                    <div class="stat-label">Da fare</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Supabase SDK -->
    <script type="module">
        import { createClient } from 'https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2/+esm';

        // üî• CONFIGURAZIONE SUPABASE - SOSTITUISCI CON I TUOI DATI!
        const SUPABASE_URL = 'https://ydtugfoezvdjsqmtnejg.supabase.co';
        const SUPABASE_ANON_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InlkdHVnZm9lenZkanNxbXRuZWpnIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NzA5MDA2NTEsImV4cCI6MjA4NjQ3NjY1MX0.i9zm2s6p8n6opYiKg3SUvh-uQBreyiGfWC6zJ0U9Jfs';

        // Verifica se Supabase √® configurato
        const isConfigured = SUPABASE_URL !== 'https://your-project.supabase.co';
        
        let supabase;
        let tasksChannel;
        
        if (isConfigured) {
            supabase = createClient(SUPABASE_URL, SUPABASE_ANON_KEY);
            document.getElementById('setupInstructions').style.display = 'none';
            showSyncStatus('‚úÖ Connesso', '');
        } else {
            showSyncStatus('‚ö†Ô∏è Configurazione necessaria', 'error');
        }

        let currentUser = '';

        // Load user from localStorage
        window.addEventListener('load', () => {
            const savedUser = localStorage.getItem('todo-username');
            if (savedUser) {
                currentUser = savedUser;
                showMainApp();
            }
        });

        window.setUserName = function() {
            const nameInput = document.getElementById('nameInput');
            const name = nameInput.value.trim();
            
            if (name) {
                currentUser = name;
                localStorage.setItem('todo-username', name);
                showMainApp();
            }
        }

        function showMainApp() {
            document.getElementById('nameSetup').style.display = 'none';
            document.getElementById('mainApp').style.display = 'block';
            document.getElementById('currentUser').textContent = `üë§ ${currentUser}`;
            
            if (isConfigured) {
                loadTasks();
                subscribeToChanges();
            } else {
                renderOfflineMessage();
            }
        }

        async function loadTasks() {
            try {
                const { data, error } = await supabase
                    .from('tasks')
                    .select('*')
                    .order('created_at', { ascending: false });

                if (error) throw error;
                
                renderTasks(data || []);
                showSyncStatus('‚úÖ Sincronizzato', '');
            } catch (error) {
                console.error('Errore caricamento tasks:', error);
                showSyncStatus('‚ùå Errore di connessione', 'error');
            }
        }

        function subscribeToChanges() {
            // Sottoscrizione ai cambiamenti in tempo reale
            tasksChannel = supabase
                .channel('tasks-changes')
                .on('postgres_changes', 
                    { event: '*', schema: 'public', table: 'tasks' }, 
                    (payload) => {
                        console.log('Cambiamento rilevato:', payload);
                        loadTasks();
                    }
                )
                .subscribe();
        }

        window.addTask = async function() {
            if (!isConfigured) {
                alert('Configura Supabase prima di aggiungere task!');
                return;
            }

            const taskInput = document.getElementById('taskInput');
            const taskText = taskInput.value.trim();
            
            if (taskText) {
                showSyncStatus('üîÑ Sincronizzazione...', 'syncing');
                
                try {
                    const { error } = await supabase
                        .from('tasks')
                        .insert([
                            {
                                text: taskText,
                                completed: false,
                                created_by: currentUser
                            }
                        ]);

                    if (error) throw error;
                    
                    taskInput.value = '';
                } catch (error) {
                    console.error('Errore aggiunta task:', error);
                    showSyncStatus('‚ùå Errore', 'error');
                }
            }
        }

        window.toggleTask = async function(taskId, completed) {
            if (!isConfigured) return;
            
            showSyncStatus('üîÑ Sincronizzazione...', 'syncing');
            
            try {
                const { error } = await supabase
                    .from('tasks')
                    .update({ completed: !completed })
                    .eq('id', taskId);

                if (error) throw error;
            } catch (error) {
                console.error('Errore aggiornamento task:', error);
                showSyncStatus('‚ùå Errore', 'error');
            }
        }

        window.deleteTask = async function(taskId) {
            if (!isConfigured) return;
            
            if (confirm('Eliminare questo task?')) {
                showSyncStatus('üîÑ Sincronizzazione...', 'syncing');
                
                try {
                    const { error } = await supabase
                        .from('tasks')
                        .delete()
                        .eq('id', taskId);

                    if (error) throw error;
                } catch (error) {
                    console.error('Errore eliminazione task:', error);
                    showSyncStatus('‚ùå Errore', 'error');
                }
            }
        }

        function renderTasks(tasks) {
            const taskList = document.getElementById('taskList');
            
            if (tasks.length === 0) {
                taskList.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">‚ú®</div>
                        <p>Nessuna cosa da fare!</p>
                        <p style="font-size: 0.9em; margin-top: 10px;">Aggiungi qualcosa per iniziare</p>
                    </div>
                `;
            } else {
                taskList.innerHTML = tasks.map(task => `
                    <li class="task-item ${task.completed ? 'completed' : ''}">
                        <input 
                            type="checkbox" 
                            class="task-checkbox" 
                            ${task.completed ? 'checked' : ''}
                            onchange="toggleTask('${task.id}', ${task.completed})"
                        />
                        <div class="task-content">
                            <div class="task-text">${escapeHtml(task.text)}</div>
                            <div class="task-meta">
                                Aggiunto da ${escapeHtml(task.created_by)} ‚Ä¢ ${formatDate(task.created_at)}
                            </div>
                        </div>
                        <button class="delete-btn" onclick="deleteTask('${task.id}')">Elimina</button>
                    </li>
                `).join('');
            }

            updateStats(tasks);
        }

        function renderOfflineMessage() {
            const taskList = document.getElementById('taskList');
            taskList.innerHTML = `
                <div class="empty-state">
                    <div class="empty-state-icon">‚öôÔ∏è</div>
                    <p>Configura Supabase per iniziare!</p>
                    <p style="font-size: 0.9em; margin-top: 10px;">Segui le istruzioni sopra</p>
                </div>
            `;
        }

        function updateStats(tasks) {
            const total = tasks.length;
            const completed = tasks.filter(t => t.completed).length;
            const pending = total - completed;

            document.getElementById('totalTasks').textContent = total;
            document.getElementById('completedTasks').textContent = completed;
            document.getElementById('pendingTasks').textContent = pending;
        }

        function showSyncStatus(message, className) {
            const status = document.getElementById('syncStatus');
            status.textContent = message;
            status.className = 'sync-status ' + className;
            status.style.display = 'block';
            
            if (!className) {
                setTimeout(() => {
                    status.style.display = 'none';
                }, 2000);
            }
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            const now = new Date();
            const diffMs = now - date;
            const diffMins = Math.floor(diffMs / 60000);
            const diffHours = Math.floor(diffMs / 3600000);
            const diffDays = Math.floor(diffMs / 86400000);

            if (diffMins < 1) return 'Ora';
            if (diffMins < 60) return `${diffMins} min fa`;
            if (diffHours < 24) return `${diffHours}h fa`;
            if (diffDays < 7) return `${diffDays}g fa`;
            
            return date.toLocaleDateString('it-IT');
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // Handle Enter key
        document.addEventListener('DOMContentLoaded', () => {
            const nameInput = document.getElementById('nameInput');
            const taskInput = document.getElementById('taskInput');
            
            if (nameInput) {
                nameInput.addEventListener('keypress', (e) => {
                    if (e.key === 'Enter') window.setUserName();
                });
            }
            
            if (taskInput) {
                taskInput.addEventListener('keypress', (e) => {
                    if (e.key === 'Enter') window.addTask();
                });
            }
        });

        // Cleanup on page unload
        window.addEventListener('beforeunload', () => {
            if (tasksChannel) {
                supabase.removeChannel(tasksChannel);
            }
        });
    </script>
</body>
</html>
